{
  "manifest_version": 3,
  "name": "Go Download",
  "description": "A Multithreading File Download Helper",
  "version": "0.1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:11235/*"
  ],
  "author": "howardliu.go@outlook.com",
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "action": {
    "default_popup": "src/options/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "public/icons/favicon-16x16.png",
    "32": "public/icons/favicon-32x32.png",
    "96": "public/icons/favicon-96x96.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/options/*",
        "public/icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}